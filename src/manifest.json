{
  "author": "Greg Sadetsky",
  "name": "Email Dictation",
  "version": "0.0.2",
  "description": "Dictate messages in Gmailâ„¢. Why type, when you can speak?",
  "icons": {
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "css": ["src/css/app.css"],
      "js": [
        "src/js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "web_accessible_resources": [
    "src/lib/jquery-1.12.0.min.js",
    "src/lib/underscore-min.js",
    "src/lib/backbone-min.js",
    "src/lib/gmail.min.js",

    "src/js/app.js",
    "src/js/dictation.js",
    "src/js/utils.js",
    "src/js/views/micbuttonview.js",
    "src/js/views/cogbuttonview.js",
    "src/js/views/composeview.js",
    "src/js/boot.js",

    "src/css/app.css"
  ],
  "permissions": [
    "storage"
  ],
  "externally_connectable": {
    "matches": ["*://mail.google.com/*"]
  },
  "manifest_version": 2
}
